<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>PinterestClone</title>
 <link rel="stylesheet" href="/stylesheets/style.css">
 <link
  href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css" rel="stylesheet"/>
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>

  
  <form hidden action="/logout" method="post" id="logoutbtn" >
    <div class="bg-zinc-900 flex z-10 flex-col nowrap absolute top-[10%] -translate-x-1/2 -translate-y-1/2 right-[10%] text-white
 w-[10%] h-[10%]  items-center justify-start gap-1 rounded-lg border-2 ">
      <div class="w-full flex items-center justify-end pr-2">
        <i id="closebtn" class="hover:cursor-pointer ri-close-circle-line h-[100%] text-red-400 font-medium"></i>
    </div>
<h1 class="text-sm text-yellow-400 w-[80%] text-center">You want to logout ?</h1>
<div class="flex justify-around gap-2 mt-3 w-full" >
  <button class="w-[40%] h-[25px] rounded-md border-2 hover:border-green-400 text-xs bg-green-900 ">Yes</button>
  <a id="nobtn" class="h-[25px] hover:cursor-pointer w-[40%] rounded-md border-2 hover:border-red-400 text-xs bg-red-900 text-center ">No</a>
</div>
    </div>
      </form>
  <% if(nav === true) {%>
  <div class="w-full px-10 py-3 flex justify-between bg-zinc-300 text-zinc-800 text-extrabold items-center">
    <div class="overflow-hidden w-[10vw] h-12" >
      <img class="w-full h-full object-cover" src="/images/Pinterest-emblema.png" alt="logo">
    </div>
    <div class="flex gap-10 items-center">
      <a href="/profile">Profile</a>
      <a href="/feed">Feed</a>
      <div class="hover:cursor-pointer px-3 py-2 bg-red-700 text-white rounded-lg" id="logoutbtnsmall" >Logout</div>
    </div>
  </div>
  <% }%>
    
  <script>
    document.querySelector('#logoutbtnsmall').addEventListener('click', function(){
        document.querySelector('#logoutbtn').style.display = 'block';
    })
    document.querySelector('#logoutbtn #closebtn' ).addEventListener('click', function(){
         document.querySelector('#logoutbtn').style.display = 'none';
         console.log('clicked')
    })
    document.querySelector('#logoutbtn #nobtn').addEventListener('click', function(){
         document.querySelector('#logoutbtn').style.display = 'none';
         console.log('clicked')
    })
    
  </script>