<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="title w-full flex align-center justify-center mb-10 ">
        <h1 class="text-5xl font-bold  ">Your <span class="text-zinc-500 hover:underline hover:decoration-wavy" >Posts</span></h1>
    </div>
    <div class="cards flex flex -wrap gap-10">
        <% user.posts.forEach(function(elem){ %>
            <a class="card w-32" href="/show/post/:cardid" >
                <div class=" w-full h-40 bg-sky-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm "><%= elem.title %></h5>
                <h6 class="opacity-50 text-xs font-semibold"><%= elem.date.toDateString().split(' ').slice(1).join(' '); %></h6>
            </a>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
